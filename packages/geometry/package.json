{
  "name": "@pigpg/geometry",
  "version": "0.0.1",
  "private": true,
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": ["dist/**"],
  "keywords": ["geometry", "2d"],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "dev": "tsup src/index.ts --format esm,cjs --watch --dts",
    "test": "jest src",
    "doc": "typedoc src",
    "check": "biome check --write src",
    "lint": "biome lint --write src",
    "format": "biome format --write src",
    "clean": "rm -rf .turbo && rm -rf node_modules && rm -rf dist"
  },
  "dependencies": {
    "@pigpg/algebra": "workspace:*"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@jest/globals": "^29.7.0",
    "@pigpg/jest-config": "workspace:*",
    "@pigpg/typescript-config": "workspace:*",
    "@types/node": "^22.9.0",
    "jest": "^29.7.0",
    "tsup": "^8.3.5",
    "typedoc": "^0.26.11",
    "typescript": "^5.6.3"
  }
}
